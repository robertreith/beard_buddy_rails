<%= image_tag '0.png', :class => "image-small" %>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="error-list"><%= msg %></li>
        <% end %>
      </ul>
  <% end %>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Register" %>
  </p>
<% end %>